<Window x:Class="ImageCameraManager.ImagePopupForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageCameraManager"
        mc:Ignorable="d"
        Title="ImagePopupForm" Height="450" Width="800">
    <Grid>
        <Image x:Name="ImageSrc" HorizontalAlignment="Left" Height="326" Margin="110,10,0,0" VerticalAlignment="Top" Width="618" Source="/Resources/640x360.png"/>
        <TextBox x:Name="NameTxt" HorizontalAlignment="Left" Margin="110,361,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="523" Height="28" FontSize="20"/>
        <Button x:Name="SubmitBtn" Content="Submit" HorizontalAlignment="Left" Margin="650,361,0,0" VerticalAlignment="Top" Height="28" Width="81" FontSize="20" Click="SubmitBtn_Click"/>

    </Grid>
</Window>
